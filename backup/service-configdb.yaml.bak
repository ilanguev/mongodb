apiVersion: v1
kind: Service
metadata:
  name: configdb
  namespace: ilya-mongodb
  labels:
    name: configdb
spec:
  ports:
  - port: 27019
    targetPort: 27019
  clusterIP: None
  selector:
    role: configdb
---
apiVersion: apps/v1beta2
kind: StatefulSet
metadata:
  name: configdb
  namespace: ilya-mongodb
spec:
  selector:
    matchLabels:
      role: configdb # has to match .spec.template.metadata.labels
  serviceName: configdb
  replicas: 1
  template:
    metadata:
      labels:
        role: configdb
        tier: configdb
    spec:
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: tier
                  operator: In
                  values:
                  - configdb
              topologyKey: kubernetes.io/hostname
      terminationGracePeriodSeconds: 10
      containers:
        - name: container-configdb
          image: mongo
          command:
            - "mongod"
            - "--configsvr"
            - "--replSet"
            - "configdb"
            - "--port"
            - "27019"
            - "--dbpath"
            - "/mongo-disk"
            - "--bind_ip"
            - "0.0.0.0"
          resources:
            requests:
              cpu: 50m
              memory: 100Mi
          ports:
            - containerPort: 27019
          volumeMounts:
            - name: volume-config
              mountPath: /mongo-disk
  volumeClaimTemplates:
  - metadata:
      name: volume-config
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: 5Gi


