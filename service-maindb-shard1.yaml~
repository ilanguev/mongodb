apiVersion: v1
kind: Service
metadata:
  name: mongodb-SHARD-headless-service
  namespace: NAMESPACE
  labels:
    name: mongodb-SHARD
spec:
  ports:
  - port: 27017
    targetPort: 27017
  clusterIP: None
  selector:
    role: mongodb-SHARD
---
apiVersion: apps/v1beta2
kind: StatefulSet
metadata:
  name: mongodb-SHARD
  namespace: NAMESPACE
spec:
  selector:
    matchLabels:
      role: mongodb-SHARD # has to match .spec.template.metadata.labels
  serviceName: mongodb-SHARD-headless-service
  replicas: 1
  template:
    metadata:
      labels:
        role: mongodb-SHARD
        tier: maindb
        replicaset: SHARD
    spec:
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: replicaset
                  operator: In
                  values:
                  - ShardSHARD
              topologyKey: kubernetes.io/hostname
      terminationGracePeriodSeconds: 10
      containers:
        - name: mongodb-shardSHARD-container
          image: mongo
          command:
            - "mongod"
            - "--port"
            - "27017"
            - "--bind_ip"
            - "0.0.0.0"
            - "--replSet"
            - "SHARD"
            - "--dbpath"
            - "/mongo-disk"
          resources:
            requests:
              cpu: 50m
              memory: 100Mi
          ports:
            - containerPort: 27017
          volumeMounts:
            - name: mongo-SHARD-persistent-storage-claim
              mountPath: /mongo-disk
  volumeClaimTemplates:
  - metadata:
      name: mongo-SHARD-persistent-storage-claim
      annotations:
        volume.beta.kubernetes.io/storage-class: "fast"
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: CAPACITY

