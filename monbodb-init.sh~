#!/bin/sh

NAMESPACE=ilya-mongodb
CONFIGDB_POD=mongodb-configdb-0
CONFIGDB_SERVICE=configdb
MONGODB_PORT=27019


K=${KUBECTL} --namespace ${NAMESPACE}

${K} exec ${CONFIGDB_POD} -- mongo --port ${MONGODB_PORT} --eval \
	"rs.initiate( { _id: \"configdb\", version: 1, members: [ {_id: 0, host: \"${CONFIGDB_POD}.${CONFIGDB_SERVICE}.${NAMESPACE}.svc.cluster.local:${MONGODB_PORT}\"}]});"
